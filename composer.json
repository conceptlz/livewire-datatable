{
    "name": "conceptlz/thunderbolt-livewire-datatable",
    "description": "A dynamic data table component for Laravel Livewire",
    "keywords": [
        "conceptlz",
        "livewire",
        "datatables",
        "tables",
        "laravel"
    ],
    "homepage": "https://github.com/conceptlz/livewire-datatable",
    "license": "MIT",
    "authors": [
        {
            "name": "Mansi Prajapati",
            "email": "mansi@conceptualize.ae",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "blade-ui-kit/blade-heroicons": "^2.1",
        "illuminate/contracts": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0",
        "livewire/livewire": "^3.0|dev-main",
        "maatwebsite/excel": "^3.1"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "brianium/paratest": "^5.0|^6.0|^7.0|^8.0",
        "laravel/pint": "^1.10",
        "monolog/monolog": "*",
        "nunomaduro/collision": "^6.0|^7.0|^8.0",
        "nunomaduro/larastan": "^2.6",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Conceptlz\\ThunderboltLivewireTables\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Conceptlz\\ThunderboltLivewireTables\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Conceptlz\\ThunderboltLivewireTables\\LivewireTablesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
